{
  "name": "lockpickers-united",
  "version": "1.0.0",
  "main": "client/index.html",
  "keywords": [],
  "author": "Neal Bayless",
  "license": "MIT",
  "description": "",
  "private": true,
  "packageManager": "yarn@4.10.2",
  "workspaces": [
    "client",
    "server",
    "shared"
  ],
  "scripts": {
    "dev": "concurrently -k -n client,server -c auto \"yarn workspace @starter/client dev\" \"yarn workspace @starter/server dev\"",
    "client": "yarn workspace @starter/client dev",
    "server": "yarn workspace @starter/server dev",
    "build": "yarn workspace @starter/client build",
    "build-all": "yarn workspaces foreach -A -v -t --exclude new-project run build",
    "lint": "eslint \"{client,server,shared}/**/*.{js,jsx}\"",
    "test": "yarn workspaces foreach -A -v -t run test",
    "vitest": "yarn workspaces foreach -A -v -t run test",
    "vitest:run": "yarn workspaces foreach -A -v -t run test:run",
    "vitest:ui": "vitest --ui",
    "e2e": "yarn workspace @starter/server test && playwright test",
    "e2e:headed": "yarn workspace @starter/server test && playwright test --headed"
  },
  "devDependencies": {
    "@eslint/compat": "^1.3.2",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.36.0",
    "@playwright/test": "^1.48.2",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.0.1",
    "@testing-library/user-event": "^14.5.2",
    "@vitest/ui": "3.2.4",
    "concurrently": "^9.0.0",
    "eslint": "^9.9.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.30.0",
    "eslint-plugin-n": "^17.10.3",
    "eslint-plugin-promise": "^6.5.1",
    "eslint-plugin-react": "^7.37.5",
    "globals": "^16.4.0",
    "jsdom": "^25.0.1",
    "lint-staged": "^15.2.9",
    "msw": "^2.6.6",
    "vitest": "^3.2.4"
  },
  "lint-staged": {
    "{client,server,shared}/**/*.{js,jsx}": [
      "eslint --fix"
    ]
  }
}
